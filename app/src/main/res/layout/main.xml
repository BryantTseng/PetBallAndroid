<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"

    android:layout_height="fill_parent" >


    <org.freedesktop.gstreamer.tutorials.tutorial_3.GStreamerSurfaceView
        android:id="@+id/surface_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical|center_horizontal" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/control_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginBottom="0dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginBottom="0dip"
                android:gravity="left"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_margin="10dip"
                    android:src="@drawable/play_power"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:layout_marginBottom="0dip"
                android:weightSum="7"
                android:gravity="right"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:weightSum="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.45"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/music_button"
                            android:background="@color/transparent"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dip"
                            android:layout_marginRight="25dip"
                            android:scaleType="fitStart"
                            android:onClick="click"
                            android:contentDescription="@string/button_stop"
                            android:src="@drawable/play_music" />

                        <ImageButton
                            android:id="@+id/led_button"
                            android:onClick="click"
                            android:background="@color/transparent"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dip"
                            android:layout_marginRight="25dip"
                            android:scaleType="fitStart"
                            android:contentDescription="@string/button_play"
                            android:src="@drawable/play_light" />
                        <ImageButton
                            android:id="@+id/list_button"
                            android:onClick="click"
                            android:background="@color/transparent"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dip"
                            android:layout_marginRight="25dip"
                            android:scaleType="fitStart"
                            android:contentDescription="@string/button_play"
                            android:src="@drawable/play_list" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <TextView
            android:id="@+id/textview_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dip"
            android:gravity="center_horizontal" />



        <LinearLayout
            android:id="@+id/control"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:gravity="center|bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="bottom"
                android:weightSum="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:weightSum="1"
                    android:gravity="left"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:weightSum="3"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:weightSum="2"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/up_Button"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:rotation="90"
                                android:src="@drawable/source_pointer"
                                android:background="@color/transparent"
                                android:scaleType="fitStart"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:weightSum="2"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/left_Button"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:rotation="0"
                                android:src="@drawable/source_pointer"
                                android:background="@color/transparent"
                                android:scaleType="fitStart"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.4">

                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/right_Button"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:rotation="180"
                                android:src="@drawable/source_pointer"
                                android:background="@color/transparent"
                                android:scaleType="fitStart" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:weightSum="2"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/down_Button"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:rotation="270"
                                android:src="@drawable/source_pointer"
                                android:background="@color/transparent"
                                android:scaleType="fitStart" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginBottom="0dip"
                android:weightSum="12"
                android:gravity="right|bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="bottom"
                    android:weightSum="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.4"
                        android:gravity="bottom"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/eat_button"
                            android:onClick="click"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5"
                            android:layout_marginRight="20dip"
                            android:layout_marginBottom="10dip"
                            android:scaleType="fitStart"
                            android:contentDescription="@string/button_play"
                            android:src="@drawable/play_eat" />
                        <ImageButton
                            android:id="@+id/take_pic_button"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.5"
                            android:layout_marginRight="20dip"
                            android:scaleType="fitStart"
                            android:onClick="click"
                            android:contentDescription="@string/button_stop"
                            android:src="@drawable/play_takepic" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="fill_parent"
        android:id="@+id/guide_page"
        android:layout_height="fill_parent"
        android:visibility="visible">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginBottom="0dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dip"
                    android:layout_weight="0.2"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginTop="10dip"
                        android:layout_marginLeft="5dip"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dip"
                        android:layout_gravity="top"
                        android:src="@drawable/teaching_power"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:layout_marginBottom="0dip"
                    android:gravity="right"
                    android:weightSum="7"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:src="@drawable/teaching_sound"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.45">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.55"
                            android:weightSum="3"
                            android:gravity="right"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1.1"
                                android:layout_marginRight="10dip">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/teaching_light"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1.1"
                                android:layout_marginRight="15dip">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/teaching_list"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:gravity="center|bottom"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="bottom"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.15"
                        android:weightSum="1"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:weightSum="3"
                            android:gravity="bottom|center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/teaching_direction"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:weightSum="1"
                        android:gravity="left"
                        android:orientation="horizontal">

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginBottom="0dip"
                    android:weightSum="12"
                    android:gravity="right|bottom"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:gravity="bottom"
                        android:weightSum="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="0.4"
                            android:gravity="bottom"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:weightSum="1"
                                android:gravity="right"
                                android:layout_weight="0.5">
                                <ImageView
                                    android:layout_width="0dip"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.6"
                                    android:src="@drawable/teaching_eat"/>

                            </LinearLayout>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dip"
                                android:layout_weight="0.5"
                                android:src="@drawable/teaching_takepicture"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="bottom"
                        android:weightSum="1"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/half_transparent"
        />
    <Button
        android:id="@+id/guide_button"
        android:layout_width="300dip"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:onClick="click"
        android:background="@drawable/login_button"
        android:textSize="23dip"
        android:textColor="@color/SignUp_button_text"
        android:text="我知道了 !" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_page"
        android:visibility="visible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/half_transparent"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_return_button"
            android:onClick="click"
            android:background="@color/transparent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:gravity="center_horizontal"
                android:weightSum="1"
                android:layout_weight="0.15">
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1">

                    <ImageButton
                        android:id="@+id/sitting_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/play_sitting"
                        android:background="@color/transparent"
                        android:onClick="click"
                        android:scaleType="fitStart"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:layout_weight="0.1">

                    <ImageButton
                        android:id="@+id/album_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/play_album"
                        android:background="@color/transparent"
                        android:onClick="click"
                        android:scaleType="fitStart"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1">

                    <ImageButton
                        android:id="@+id/count_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/play_count"
                        android:background="@color/transparent"
                        android:onClick="click"
                        android:scaleType="fitStart"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
