<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"

    android:layout_height="fill_parent" >

    <LinearLayout
        android:background="@color/Login_backcolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="227dp"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:src="@drawable/ntust" />

        <LinearLayout
            android:background="@color/Login_backcolor"
            android:layout_width="match_parent"
            android:layout_height="336dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Login_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Login_textview_backcolor"
                android:textColorHint="@color/Login_textview_hinttextcolor"
                android:textColor="@color/Login_textview_textcolor"
                android:ems="10"
                android:hint="輸入email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Login_textview_backcolor"
                android:textColorHint="@color/Login_textview_hinttextcolor"
                android:textColor="@color/Login_textview_textcolor"
                android:ems="10"
                android:hint="輸入密碼"
                android:inputType="textPassword"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/parentlayout"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="click"
                android:text="登入"
                android:background="@color/Login_button_login"/>

            <Button
                android:id="@+id/signup_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="click"
                android:text="申請帳號"
                android:background="@color/Login_button_createaccount"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
