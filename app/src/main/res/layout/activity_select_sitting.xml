<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center_vertical|center_horizontal"

    android:background="@color/Select_sitting_backcolor"

    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        >

        <!-- Image圖片 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.8">
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="8.4"
            android:weightSum="8"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2"
                android:weightSum="10"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/button_startplay"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="8"
                    android:src="@drawable/source_sitting_logo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/Select_sitting_text"
                    android:text="roomii@mail.ntust.edu.tw"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="6.2"
                android:orientation="vertical"
                android:weightSum="12">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/Select_sitting_text"
                    android:text="操作畫面設定"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"

                    android:background="@color/Select_backcolor">
                    <Button
                        android:id="@+id/controlerLocaAdjButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:onClick="click"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/Select_sitting_text_inside_texture"
                            android:gravity="center_vertical"
                            android:textSize="18dp"
                            android:text="方向鍵位置"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/controlerLocaText"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/Select_sitting_text"
                                android:gravity="center_vertical|right"
                                android:textSize="18dp"
                                android:text="左側"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:weightSum="1"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@drawable/source_sitting_enter"
                                    android:layout_weight="0.6" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@color/Select_backcolor">
                    <Button
                        android:id="@+id/soundAdjButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:onClick="click"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/Select_sitting_text_inside_texture"
                            android:gravity="center_vertical"
                            android:textSize="18dp"
                            android:text="呼叫聲"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/soundText"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/Select_sitting_text"
                                android:gravity="center_vertical|right"
                                android:textSize="18dp"
                                android:text="響板聲"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:weightSum="1"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@drawable/source_sitting_enter"
                                    android:layout_weight="0.6" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@color/Select_backcolor">
                    <Button
                        android:id="@+id/lightAdjButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:onClick="click"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/Select_sitting_text_inside_texture"
                            android:gravity="center_vertical"
                            android:textSize="18dp"
                            android:text="燈光"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/lightColorText"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/Select_sitting_text"
                                android:gravity="center_vertical|right"

                                android:textSize="18dp"
                                android:text="黃光"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:weightSum="1"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@drawable/source_sitting_enter"
                                    android:layout_weight="0.6" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@color/Select_backcolor">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:onClick="click"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/Select_sitting_text_inside_texture"
                            android:gravity="center_vertical"
                            android:textSize="18dp"
                            android:text="影像畫質"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/Select_sitting_text"
                                android:gravity="center_vertical|right"

                                android:textSize="18dp"
                                android:text="720P"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:weightSum="1"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@drawable/source_sitting_enter"
                                    android:layout_weight="0.6" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:textSize="18dp"
                    android:textColor="@color/Select_sitting_text"
                    android:text="Wi-Fi設定"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@color/Select_backcolor">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:onClick="click"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/Select_sitting_text_inside_texture"
                            android:gravity="center_vertical"
                            android:textSize="18dp"
                            android:text="  重設Wi-Fi"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:weightSum="1"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@drawable/source_sitting_enter"
                                    android:layout_weight="0.6" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:textSize="18dp"
                    android:textColor="@color/Select_sitting_text"
                    android:text="帳號設定"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@color/Select_backcolor">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:onClick="click"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/Select_sitting_text_inside_texture"
                            android:gravity="center_vertical"
                            android:textSize="18dp"
                            android:text="更改密碼"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:weightSum="1"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@drawable/source_sitting_enter"
                                    android:layout_weight="0.6" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@color/Select_backcolor">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:onClick="click"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/Select_sitting_text_inside_texture"
                            android:gravity="center_vertical"
                            android:textSize="18dp"
                            android:text="登出帳號"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:weightSum="1"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:src="@drawable/source_sitting_enter"
                                    android:layout_weight="0.6" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:background="@color/Select_backcolor">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:onClick="click"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/Select_sitting_text_inside_texture"
                            android:gravity="center_vertical"
                            android:textSize="18dp"
                            android:text="刪除帳號"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right">


                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.8">

        </LinearLayout>




    </LinearLayout>
</LinearLayout>